package _6;

import java.util.Scanner;

public class _6_3 {

	private static Scanner scanner = new Scanner(System.in);

	public static void main(String[] args) {
		System.out.println("Enter the triangle size (integer).");
		int n = scanner.nextInt();
		
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < n - i - 1) {
				System.out.print(" ");
			}
		}
	}

}
